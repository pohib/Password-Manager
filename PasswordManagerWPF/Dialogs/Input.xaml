<Window x:Class="PasswordManagerWPF.Dialogs.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock x:Name="PromptTextBlock" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" MinWidth="200" Margin="0,5,0,10"/>
        <Button Content="OK" Click="OkButton_Click" Width="80" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>